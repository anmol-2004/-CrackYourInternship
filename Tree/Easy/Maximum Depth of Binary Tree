//Leetcode 104
//https://leetcode.com/problems/maximum-depth-of-binary-tree/


class Solution {
public:
    int maxDepth(TreeNode* root) {
        int depth = 0;
        
        if(root == NULL){
            return 0;
        }

        int leftKaAns = maxDepth(root->left);

        int rightKaAns = maxDepth(root->right);

        int finalAns = max(leftKaAns, rightKaAns) + 1;

        return finalAns;
    }
};
