//Leetcode 1423
//https://leetcode.com/problems/maximum-points-you-can-obtain-from-cards/

class Solution {
public:
    int maxScore(vector<int>& nums, int k) {
        int total = 0;
        for (int i = 0; i < k; i++) total += nums[i];
        int best = total;
        for (int i = k - 1, j = nums.size() - 1; ~i; i--, j--)
            total += nums[j] - nums[i], best = max(best, total);
        return best;
    }
};
